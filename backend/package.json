{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cp": "cpy src/schema/* dist/schema",
    "env": "cpy .env dist",
    "compile": "npx tsc && node ./dist/index.js",
    "dev": "npm run cp && npm run env && nodemon -L -e ts --exec \"npm run compile\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "mongoose": "^5.11.10",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/nedb": "^1.8.11",
    "@types/node": "^14.14.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "apollo-server-testing": "^2.19.1",
    "cpy-cli": "^3.1.1",
    "dotenv-webpack": "^6.0.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src/schema",
      "./dist"
    ],
    "ext": "js,graphql",
    "events": {
      "restart": "xcopy .\\src\\schema\\*.grapql .\\dist\\schema /Y /O /R /F /I /V /E"
    }
  }
}
